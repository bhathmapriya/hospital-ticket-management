<%- include('partials/header', {isLogin:true})%>
<link rel="stylesheet" type="text/css" href="css/style.css" />

	<script type="text/javascript">

$(".log-in").click(function(){
	$(".signIn").addClass("active-dx");
	$(".signUp").addClass("inactive-sx");
	$(".signUp").removeClass("active-sx");
	$(".signIn").removeClass("inactive-dx");
});

$(".back").click(function(){
	$(".signUp").addClass("active-sx");
	$(".signIn").addClass("inactive-dx");
	$(".signIn").removeClass("active-dx");
	$(".signUp").removeClass("inactive-sx");
});
		function validateForm() {
			if (window.loginCaptcha) {
				return true;
			} else {
				$('.alert').removeClass('hide');
				return false;
			}

		}
		var onloadCallback = function () {
			var verifyCallback = function (response) {
				window.loginCaptcha = response;
			};
			grecaptcha.render('recaptcha-login', {
				'sitekey': '6Lf8UngaAAAAABB6GDWq2HhRPGvstRPm9eWKVwxR',
				'callback': verifyCallback,
				'theme': 'white'
			});
		}
	</script>
	<div class="container">
		<div style="text-align:center">
			<h2>Login</h2>
		</div>
		<div style="width:30%; margin: 0 auto;">
			<form method="POST" class="signIn" action="/login" onsubmit="return validateForm()">

				<div class="form-group">
					<input class="form-control" type="text" name="username" placeholder="User name" required>
				</div>
				<div class="form-group">
					<input class="form-control" type="password" name="password" placeholder="password" required>
				</div>

				<div id="recaptcha-login"></div>

				<div class="alert alert-warning alert-dismissible hide" role="alert">
					Please finish captcha verification.
				</div>

				<div class="form-group">
					<button type="submit" class="btn btn-lg btn-primary btn-block form-btn dx" >LOGIN</button>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block form-btn sx back" onclick="location.href='/signup'">SIGNUP</button>
					
				</div>

			</form>

		</div>
	</div>
	<script src="https://www.google.com/recaptcha/api.js?onload=onloadCallback&render=explicit" async defer>
	</script>
	<%- include('partials/footer')%>