	<div class="container">
		<div style="text-align:center">

			<h2>Create your account</h2>
		</div>
		<div style="width:50%; margin: 0 auto;">
			<form method="POST" action="/doctor" enctype="multipart/form-data" class="signUp">
				<div class="form-group">
                    <label>Doctor Name</label>
					<input class="form-control " type="text" name="name" placeholder="User name" required>
				</div>
                
				<div class="form-group">
                    <label>Create Password</label>
					<input class="form-control" type="password" name="password" placeholder="Create password" required>
				</div>

				<div class="form-group">
                    <label>Email address</label>
					<input type="email" name="email" placeholder="email" required />
				</div>
				
                <div class="form-group">
                    <label>Specialized in</label>
                    <select id="dept" name="department">
                        <option value="ent">ENT</option>
                        <option value="cardiology">Cardiology</option>
                        <option value="Nuerology">Nuerology</option>
                        <option value="Gynecology">Gynecology</option>
                        <option value="Dental">Dental</option>
                    </select>
				</div>
                
                <div class="form-group">
                    <label>Age</label>
					<input class="form-control " type="number" name="age" placeholder="Age" required>
				</div>
                
                <div class="form-group">
                    <label>Gender</label>
                    <select id="gendertag" name="gender">
                        <option value="male">Male</option>
                        <option value="female">Female</option>
                    </select>
				</div>

                <div class="form-group">
                    <label>Available Time</label>
					<input class="form-control " type="time" name="availableFrom" placeholder="availabletime" required>
				</div>

                <div class="form-group">
                    <label>Available Till</label>
					<input class="form-control " type="time" name="availableTo" placeholder="availabletill" required>
				</div>

                <div class="form-group">
                    <label>Years of Experience</label>
					<input class="form-control " type="number" name="experience" placeholder="Years of experience" required>
				</div>

				<div class="form-group">
                    <label>Upload Image</label>
					<input type="file" id="imagee" title="Upload image" name="docimage">
				</div>

				<div class="form-group">
                    <label>Mobile number</label>
					<input class="form-contol" type="number" name="mobile" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" placeholder="enter mobile number" required>
				</div>

				
				<div class="form-group">
					<button type="submit" class="btn btn-lg btn- btn-block login form-btn sx" onclick="sendEmail()">Signup</button>
				</div>
			</form>
		</div>
	</div>

